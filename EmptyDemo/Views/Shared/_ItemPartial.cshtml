@model Item 

<div class="col-sm-4">
    <div class="card-deck">
        <div class="card shadow">
            <img class="card-img-top img-thumbnail" src="@Model.ImageURL" style="width:100%; height:300px" />
            <div class="card-body text-center">
                <div class="row">
                    <div class="col-md-8">
                        <h6 class="card-title">
                            <a asp-controller="Details" asp-action="Index" asp-route-ItemId="@Model.ItemId"
                               style="text-decoration:none;">
                                @Model.ItemName
                            </a>
                        </h6>
                    </div>
                    <div class="col-md-4">
                        <h6>&#8377 @Model.Price</h6>
                    </div>
                </div>

                <p class="card-text">
                    &ldquo; @Model.ItemDescription &rdquo;
                </p>
                <a asp-area="" asp-controller="Details" asp-action="Index" asp-route-ItemId="@Model.ItemId" target="_blank" class="btn btn-primary btn-sm">View</a>
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-ItemId="@Model.ItemId" target="_blank" class="btn btn-success btn-sm">Add to Cart</a>
            </div>
        </div>
    </div>
</div>